<p id="notice"><%= notice %></p>

<h1>Steps</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Image</th>
      <th>Comments count</th>
      <th>Supports count</th>
      <th>Habit</th>
      <th>Date completion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.caption %></td>
        <td><%= step.image %></td>
        <td><%= step.comments_count %></td>
        <td><%= step.supports_count %></td>
        <td><%= step.habit_id %></td>
        <td><%= step.date_completion %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

