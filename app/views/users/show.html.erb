<%= @user.username%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Habit type</th>
      <th>Frequency</th>
      <th>Goal frequency</th>
      <th>Private</th>
      <th>Current progress</th>
      <th>Top streak</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.own_habits.each do |habit| %>
      <tr>
        <td><%= habit.title %></td>
        <td><%= habit.description %></td>
        <td><%= habit.habit_type %></td>
        <td><%= habit.frequency %></td>
        <td><%= habit.goal_frequency %></td>
        <td><%= habit.private %></td>
        <td><%= habit.current_progress %></td>
        <td><%= habit.top_streak %></td>
        <td><%= habit.owner.username %></td>
        <td><%= link_to 'Show', habit %></td>
        <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
        <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Image</th>
      <th>Comments count</th>
      <th>Supports count</th>
      <th>Habit</th>
      <th>Owner</th>
      <th>Date completion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.own_steps.each do |action| %>
      <tr>
        <td><%= action.caption %></td>
        <td><%= action.image %></td>
        <td><%= action.supports_count %></td>
        <td><%= action.habit.title %></td>
        <td><%= action.owner.username %></td>
        <td><%= action.date_completion %></td>
        <td><%= link_to 'Show', action %></td>
        <td><%= link_to 'Edit', edit_step_path(action) %></td>
        <td><%= link_to 'Destroy', action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    
  </tbody>
</table>

<br>
